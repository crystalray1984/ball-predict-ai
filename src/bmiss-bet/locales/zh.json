{
    "apps": [
        {
            "name": "bmiss-bet-server",
            "script": "./dist/bmiss-bet/server.js",
            "interpreter_args": "-r tsconfig-paths/register",
            "env": {
                "NODE_ENV": "production",
                "TZ": "Asia/Shanghai",
                "TS_NODE_BASEURL": "./dist"
            },
            "log_date_format": "YYYY-MM-DDTHH:mm:ss",
            "merge_logs": true,
            "error_file": "./runtime/logs/bmiss-bet-server.log",
            "out_file": "./runtime/logs/bmiss-bet-server.log",
            "pid_file": "./runtime/bmiss-bet-server.pid"
        },
        {
            "name": "bmiss-bet-settlement",
            "script": "./dist/bmiss-bet/start-settlement.js",
            "interpreter_args": "-r tsconfig-paths/register",
            "env": {
                "NODE_ENV": "production",
                "TZ": "Asia/Shanghai",
                "TS_NODE_BASEURL": "./dist"
            },
            "log_date_format": "YYYY-MM-DDTHH:mm:ss",
            "merge_logs": true,
            "error_file": "./runtime/logs/bmiss-bet-settlement.log",
            "out_file": "./runtime/logs/bmiss-bet-settlement.log",
            "pid_file": "./runtime/bmiss-bet-settlement.pid"
        }
    ]
}
